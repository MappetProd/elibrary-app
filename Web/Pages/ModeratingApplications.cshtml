@using EL.Service.DTO;
@model EL.Service.ViewModel.ModeratingApplicationViewModel

@{
	Layout = Model.MasterLayoutRef;
}

@section AdditionalStyles {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/applications.css">
}

<h3 class="text-center my-4">Управление заявками</h3>
<main class="container">
	<!-- Accordion for Requests -->
	<div class="accordion" id="librarianAccordion">
		<!-- Заявки к рассмотрению -->
		<div class="accordion-item">
			<h2 class="accordion-header" id="toReviewHeading">
				<button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#toReview" aria-expanded="true" aria-controls="toReview">
					Заявки к рассмотрению
				</button>
			</h2>
			<div id="toReview" class="accordion-collapse collapse show" aria-labelledby="toReviewHeading" data-bs-parent="#librarianAccordion">
				@await Html.PartialAsync("_PartialModeratingApplicationOutput.cshtml", Model.ResolveRequiredApplications)
			</div>
		</div>
		<!-- Заявки к приёмке -->
		<div class="accordion-item">
			<h2 class="accordion-header" id="toReceiveHeading">
				<button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#toReceive" aria-expanded="false" aria-controls="toReceive">
					Заявки к приёмке
				</button>
			</h2>
			<div id="toReceive" class="accordion-collapse collapse" aria-labelledby="toReceiveHeading" data-bs-parent="#librarianAccordion">
				@await Html.PartialAsync("_PartialModeratingApplicationOutput.cshtml", Model.EndRequiredApplications)
			</div>
		</div>
		<!-- Архив заявок -->
		<div class="accordion-item">
			<h2 class="accordion-header" id="archiveHeading">
				<button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#archive" aria-expanded="false" aria-controls="archive">
					Архив заявок
				</button>
			</h2>
			<div id="archive" class="accordion-collapse collapse" aria-labelledby="archiveHeading" data-bs-parent="#librarianAccordion">
				@await Html.PartialAsync("_PartialModeratingApplicationOutput.cshtml", Model.ArchiveApplications)
			</div>
		</div>
	</div>
</main>

@section Scripts {
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/moderate-application.js"></script>
}