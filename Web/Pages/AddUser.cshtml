@page
@model EL.Web.Pages.AddUserModel
@{
    Layout = "/Pages/Shared/_MasterLibrarian.cshtml";
}

@* @addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers *@

@section AdditionalStyles {

}

<main class="container">
    <p>Регистрация пользователя<p>
        <div class="form-container">
            <form action="@Url.Action("CreateUser", "Register")" method="post">

                <label for="name">Фамилия</label>
                <input type="text" id="name" name="Name" required>

                <label for="surname">Имя</label>
                <input type="text" id="surname" name="Surname" required>

                <label for="patronymic">Отчество</label>
                <input type="text" id="patronymic" name="Patronymic" required>

                <label for="birthdate">Дата рождения</label>
                <input type="date" id="birthdate" name="BirthDate" required>

                <label for="phone_number">Телефон</label>
                <input type="tel" pattern="[+7]-[0-9]{3}-[0-9]{3}-[0-9]{2}-[0-9]{2}" id="phone_number" name="Phone_number" required>

                <label for="login">Логин</label>
                <input type="text" id="login" name="Login" required>

                <label for="password">Пароль</label>
                <input type="password" id="password" name="Password" required>

                <input type="submit" value="Зарегистрировать">
            </form>
        </div>
</main>

