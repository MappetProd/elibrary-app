@model EL.Service.ViewModel.ReaderApplicationsViewModel
@{
    Layout = Model.MasterLayoutRef;
}

@section AdditionalStyles {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/applications.css">
}

<h3 class="text-center my-4">История заявок</h3>
<main class="container">
    <!-- Accordion for Requests -->
    <div class="accordion" id="readerAccordion">
        <!-- Рассматриваемые заявки -->
        <div class="accordion-item">
            <h2 class="accordion-header" id="pendingHeading">
                <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#pendingRequests" aria-expanded="true" aria-controls="pendingRequests">
                    Рассматриваемые заявки
                </button>
            </h2>
            <div id="pendingRequests" class="accordion-collapse collapse show" aria-labelledby="pendingHeading" data-bs-parent="#readerAccordion">
                <div class="accordion-body">
                    <!-- Вложенные заявки -->
                    <div class="accordion" id="pendingRequestsAccordion">
                        <!-- Пример заявки -->
                        <div class="accordion-item">
                            @await Html.PartialAsync("/Pages/_PartialApplicationOutput.cshtml", Model.SentApplications)
                        </div>
                        <!-- Другие заявки -->
                    </div>
                </div>
            </div>
        </div>
        <!-- Действующая заявка -->
        <div class="accordion-item">
            <h2 class="accordion-header" id="activeHeading">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#activeRequests" aria-expanded="false" aria-controls="activeRequests">
                    Действующие заявки
                </button>
            </h2>
            <div id="activeRequests" class="accordion-collapse collapse" aria-labelledby="activeHeading" data-bs-parent="#readerAccordion">
                <div class="accordion-body">
                    <!-- Вложенные заявки -->
                    <div class="accordion" id="activeRequestsAccordion">
                        <div class="accordion-item">
                            @await Html.PartialAsync("/Pages/_PartialApplicationOutput.cshtml", Model.ApprovedApplications)
                        </div>
                        <!-- Другие заявки -->
                    </div>
                </div>
            </div>
        </div>
        <!-- Архив заявок -->
        <div class="accordion-item">
            <h2 class="accordion-header" id="archiveHeading">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#archiveRequests" aria-expanded="false" aria-controls="archiveRequests">
                    Архив заявок
                </button>
            </h2>
            <div id="archiveRequests" class="accordion-collapse collapse" aria-labelledby="archiveHeading" data-bs-parent="#readerAccordion">
                <div class="accordion-body">
                    <!-- Вложенные заявки -->
                    <div class="accordion" id="archiveRequestsAccordion">
                        @await Html.PartialAsync("/Pages/_PartialApplicationOutput.cshtml", Model.EndedApplications)
                        <!-- Другие заявки -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
}