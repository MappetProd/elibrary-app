@model EL.Service.ViewModel.BaseViewModel
@{
    Layout = Model.MasterLayoutRef;
}

@section AdditionalStyles {
    <link href="/css/change-password.css" rel="stylesheet"/>
}

<div class="container">
    <h1>Смена пароля</h1>
    <main>
        <form id="passwordChangeForm">
            <div class="form-group">
                <label for="oldPassword">Старый пароль</label>
                <input type="password" id="oldPassword" name="oldPassword" placeholder="Введите старый пароль" required>
            </div>
            <div class="form-group">
                <label for="newPassword">Новый пароль</label>
                <input type="password" id="newPassword" name="newPassword" placeholder="Введите новый пароль" required>
            </div>
            <div class="form-group">
                <label for="confirmPassword">Повторите новый пароль</label>
                <input type="password" id="confirmPassword" name="confirmPassword" placeholder="Повторите новый пароль" required>
            </div>
            <button type="submit" class="btn">Изменить пароль</button>
        </form>
    </main>
</div>

@section Scripts {
    <script src="/js/change-password.js"></script>
}               